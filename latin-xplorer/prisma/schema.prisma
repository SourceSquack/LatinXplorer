generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL") // conectando a planetscale donde creo la base de datos
  relationMode = "prisma"
}


model User {
    id          Int          @id          @default(autoincrement())
    username    String       @unique
    email       String       @unique
    password    String
    createdAt   DateTime     @default(now())
    updatedAt   DateTime     @updatedAt
}
